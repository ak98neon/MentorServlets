<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>com.ak98neon.controller.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddDepartment</servlet-name>
        <servlet-class>com.ak98neon.controller.AddDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDepartment</servlet-name>
        <url-pattern>/addDepartment</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ListDepartment</servlet-name>
        <servlet-class>com.ak98neon.controller.ListDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListDepartment</servlet-name>
        <url-pattern>/listDepartment</url-pattern>
    </servlet-mapping>
</web-app>